<resources>
    <!-- Base application theme -->
    <style name="Base.Theme.JavApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryVariant">@color/card</item>
        <item name="colorOnPrimary">@color/card</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accents</item>
        <item name="colorSecondaryVariant">@color/accents</item>
        <item name="colorOnSecondary">@color/accents</item>

        <!-- Background color -->
        <item name="android:windowBackground">@color/background</item>

        <!-- Text color -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/accents</item>

        <!-- Button styles -->
        <item name="android:windowLightStatusBar">true</item>


    </style>

</resources>

