<resources>
    <!-- Base application theme -->
    <style name="Base.Theme.JavApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/card</item>
        <item name="colorPrimaryVariant">@color/card</item>
        <item name="colorOnPrimary">@color/card</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accents</item>
        <item name="colorSecondaryVariant">@color/accents</item>
        <item name="colorOnSecondary">@color/accents</item>

        <!-- Background color -->
        <item name="android:windowBackground">@color/background</item>

        <!-- Text color -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/accents</item>

        <!-- Button styles -->
        <item name="android:windowContentTransitions">true</item>


    </style>

    <style name="Base.Theme.JavApp.2" parent="Base.Theme.JavApp">
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/background</item>

    </style>

    <style name="roundedIcons">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="AlertDialogStyle" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <!-- Cambiar el color de fondo -->
        <item name="android:background">@color/accents</item>
        <item name="colorPrimary">@color/white</item>

        <!-- Cambiar el color del texto -->
        <item name="android:textColorPrimary">@color/white</item>
    </style>
</resources>

